<UserControl x:Class="ALOTInstallerWPF.Flyouts.InstallOptionsFlyout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ALOTInstallerWPF.Flyouts"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:converters="clr-namespace:ALOTInstallerWPF.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>
    <DockPanel Margin="10">
        <TextBlock Text="{Binding TitleText}" DockPanel.Dock="Top" TextAlignment="Center" FontSize="20" Margin="0,0,0,5"/>
        <StackPanel DockPanel.Dock="Bottom" VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">
            <Button Content="Cancel Install" Margin="5,0"/>
            <Button Content="Install Textures"/>
        </StackPanel>
        <StackPanel VerticalAlignment="Center" Visibility="{Binding DeterminingOptionsVisible, Converter={StaticResource BoolToVisibilityConverter}}">
            <mah:ProgressRing HorizontalAlignment="Center" Foreground="White"/>
            <TextBlock Text="Calculating install options" TextAlignment="Center" Foreground="White"/>
        </StackPanel>
        <StackPanel Margin="0,5" HorizontalAlignment="Center" Visibility="{Binding DeterminingOptionsVisible, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter='Not'}">
            <StackPanel Orientation="Vertical" Name="optionsList" HorizontalAlignment="Center"/>
        </StackPanel>
        

    </DockPanel>
</UserControl>
