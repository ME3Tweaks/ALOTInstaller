        <Style x:Key="LinkLabel" TargetType="Button">
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="Lime"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <TextBlock TextDecorations="Underline" 
                    Text="{TemplateBinding Content}"
                    Background="{TemplateBinding Background}"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Foreground" Value="MediumVioletRed"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="{x:Type ContentPresenter}">
            <Setter Property="Margin" Value="0,0,0,0" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="15" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center">
            <TextBlock x:Name="HeaderLabel" TextAlignment="Center" Text="Preparing application..." TextWrapping="Wrap" />
        </Label>
        <Label Grid.Column="0" Grid.Row="1"  HorizontalContentAlignment="Center">
            <TextBlock x:Name="AddonFilesLabel" TextAlignment="Center" Text="Preparing application..." TextWrapping="Wrap" />
        </Label>
        <!--<ProgressBar alotaddonguiui:ProgressBarSmooth.SmoothValue="{Binding ProgressBarValue}" Value="{Binding Path=ProgressBarValue, Mode=OneWay}" Minimum="0" Maximum="{Binding Progressbar_Max}" x:Name="Build_ProgressBar" Grid.Column="0" Grid.Row="2" IsIndeterminate="true" />-->
        <ListBox Grid.Column="0" Grid.Row="3"
                  BorderThickness="0"
                  ItemsSource="{Binding CurrentlyDisplayedFiles}" 
                  VirtualizingPanel.IsVirtualizingWhenGrouping="True" 
                  VirtualizingPanel.IsVirtualizing="True">
            <!-- This is what each list item looks like-->
            <ListBox.ItemTemplate>
                <DataTemplate DataType="{x:Type manifest:ManifestFile}">
                    <DockPanel>
                        <Border DockPanel.Dock="Left" Background="{Binding Converter={StaticResource ReadyColorConverter}}" Padding="0,4" Width="5" Margin="0,0,4,0"/>

                        <StackPanel Orientation="Vertical" DockPanel.Dock="Left" Margin="0,3">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconIonicons Margin="0,0,3,0"  Kind="{Binding Converter={StaticResource ReadyIconConverter}}" Foreground="{Binding Converter={StaticResource ReadyColorConverter}}" />
                                <TextBlock Text="{Binding FriendlyName}" FontWeight="Bold"/>
                            </StackPanel>

                            <TextBlock Text="{Binding StatusText}"/>
                            <TextBlock Text="{Binding Converter={StaticResource InstallerFileBackingFileConverter}}" FontSize="10"/>
                        </StackPanel>

                        <StackPanel Orientation="Vertical" DockPanel.Dock="Right" Margin="3,3">
                            <StackPanel  Orientation="Horizontal" HorizontalAlignment="Right">
                                <Border Visibility="{Binding ApplicableGames, Converter={StaticResource ApplicableGamesVisibilityConverter}, ConverterParameter='ME1'}" ToolTip="This file applies to Mass Effect" Padding="1" BorderThickness="1" BorderBrush="CadetBlue" Background="DarkBlue" CornerRadius="2" VerticalAlignment="Center">
                                    <TextBlock FontSize="10"  Text="Mass Effect" VerticalAlignment="Center"/>
                                </Border>
                                <Border Visibility="{Binding ApplicableGames, Converter={StaticResource ApplicableGamesVisibilityConverter}, ConverterParameter='ME2'}" ToolTip="This file applies to Mass Effect 2" Padding="1" BorderThickness="1" BorderBrush="Red" Background="#6b006b" CornerRadius="2" VerticalAlignment="Center">
                                    <TextBlock FontSize="10"  Text="Mass Effect 2" VerticalAlignment="Center"/>
                                </Border>
                                <Border Visibility="{Binding ApplicableGames, Converter={StaticResource ApplicableGamesVisibilityConverter}, ConverterParameter='ME3'}" ToolTip="This file applies to Mass Effect 3" Padding="1" BorderThickness="1" BorderBrush="Chartreuse" Background="#0f4e60" CornerRadius="2" VerticalAlignment="Center">
                                    <TextBlock FontSize="10"  Text="Mass Effect 3" VerticalAlignment="Center"/>
                                </Border>
                            </StackPanel>
                            <TextBlock TextAlignment="Right" Text="{Binding RecommendationString}" FontSize="10" FontStyle="Italic"/>
                            <TextBlock TextAlignment="Right" Text="{Binding RecommendationReason}" FontSize="10" FontStyle="Italic"/>

                        </StackPanel>



                    </DockPanel>
                    <!--<Grid x:Name="ListItemElement" Background="Transparent">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="20" />
                            <RowDefinition Height="25" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="7" />
